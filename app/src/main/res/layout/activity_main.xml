<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomTab"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottomTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:tabIndicatorColor="@color/bg_header"
        app:tabSelectedTextColor="@color/bg_header"
        app:tabSelectedTextAppearance="@color/bg_header"
        android:background="@drawable/tab_card"
        android:elevation="2dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homeTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="0dp"
            android:icon="@drawable/icon_home"
            android:text="Home" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/locker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/locker_icon"
            android:text="Locker" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/rentTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/padlock"
            android:text="Rent" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/advertTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/advert_icon"
            android:text="Advert" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/profileTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/profile_icon"
            android:text="Account" />

    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>