<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:visibility="visible"
    android:id="@+id/rl_root_feedback"
    android:background="@android:color/transparent"
    android:windowSoftInputMode="adjustResize|stateHidden"
    android:layout_gravity="center"
    android:layout_marginHorizontal="45dp"

    android:layout_marginVertical="60dp">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Gateway to Convenience"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/cancel" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:src="@drawable/house_image"
        android:textColor="@color/colorWhite"
        />

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Explore the locker services with Hublocker"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn how locker services work"
            android:id="@+id/learnHowTextView"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/grey_700"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>